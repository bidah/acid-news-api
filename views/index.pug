extends ./layout.pug

block content

  .jumbotron
    h1 HN Feed
    h2 We <3 hacker news!

  .list-group
    each item in feed
      if !Boolean(item.userHasDeletedItem)
        a(class='list-group-item list-group-item--changes' href= item.url target="_blanc") #{item.title}
          //span(class='glyphicons glyphicons-bin' style={float: 'right'})
          //i(class='fas fa-trash-alt')

          span(class='author') #{ ' - ' + item.author + ' - '}

          a(href="/delete/" + item._id)
            span(class='trash') trash

          span(class='created-at') #{ prettyDate(item.created_at) }


